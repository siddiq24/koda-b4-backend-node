// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model users {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  role       String    @default("user")
  created_at DateTime  @default(now())
  deleted_at DateTime?
}
